<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.runtime.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="xml"
            id="eu.esdihumboldt.hale.io.appschema.config"
            name="GeoTools app-schema"
            priority="normal">
         <describer
               class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
            <parameter
                  name="element"
                  value="{http://www.geotools.org/app-schema}AppSchemaDataAccess">
            </parameter>
         </describer>
      </content-type>
   </extension>
   <extension
         point="eu.esdihumboldt.hale.io.provider">
      <provider
            class="eu.esdihumboldt.hale.io.appschema.writer.internal.AppSchemaAlignmentWriter"
            id="eu.esdihumboldt.hale.io.appschema.writer"
            name="GeoTools app-schema">
         <contentType
               ref="eu.esdihumboldt.hale.io.appschema.config">
         </contentType>
      </provider>
   </extension>

</plugin>
